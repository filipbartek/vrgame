#VRML V2.0 utf8

WorldInfo {
	title "Lighthouse roof"
	info ["Filip Bártek", "Eva Pešková"]
}

# Picture:
# http://www.bellrock.org.uk/lighthouse/lighthouse_lightroom.htm

Switch {
	choice [
		DEF	RoofShape Shape {
			appearance Appearance {
				material Material {
					diffuseColor 0 0.25 0.125
				}
			}
			geometry Extrusion {

				# regular octagon
				# diameter: 2
				crossSection [
					 1.0000 -0.4142,
					 0.4142 -1.0000,
					-0.4142 -1.0000,
					-1.0000 -0.4142,
					-1.0000  0.4142,
					-0.4142  1.0000,
					 0.4142  1.0000,
					 1.0000  0.4142,
					 1.0000 -0.4142
				]

				spine [
					0 0.00 0,
					0 0.38 0,
					0 0.71 0,
					0 0.92 0,
					0 1.00 0,
					0 1.10 0,
					0 1.15 0,
					0 1.40 0
				]

				scale [
					1.00 1.00,
					0.92 0.92,
					0.71 0.71,
					0.38 0.38,
					0.20 0.20,
					0.20 0.20,
					0.05 0.05,
					0.05 0.05
				]

				creaseAngle	0
				beginCap FALSE
				endCap FALSE
				solid FALSE
			}
		}
		DEF	Roof Transform {
			children [
				USE	RoofShape
			]
			# Like lightroom masonry
			scale 2.0574 2.0574 2.0574
		}
	]
}

USE	Roof
