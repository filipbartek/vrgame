#VRML V2.0 utf8

WorldInfo {
	title "Bedroom"
	info ["Eva Pešková", "Filip Bártek"]
}

EXTERNPROTO	LadyBugProto [
	exposedField SFInt32 lod	 
]
"ladyBugLods.wrl#LadyBug"

EXTERNPROTO	GlassProto [
	exposedField SFInt32 lod
	exposedField SFColor color
]
"glassLods.wrl#Cups"

EXTERNPROTO	StairsProto [
	exposedField SFInt32 lod  
	exposedField SFNode	texture
]
"../blend/stair.wrl#Stairs"

EXTERNPROTO ApartmentProto [
	exposedField SFInt32 lod 
	exposedField SFNode windowTexture	 
]
"apartment.wrl#Apartment"

EXTERNPROTO Arrow3DBlinker [	
	eventIn SFBool arrowVisible
]
"arrow.wrl#Arrow3DBlinker"

PROTO BedRoom [
	exposedField SFInt32 lod 1
	eventIn	SFBool arrow_visible
	eventOut SFBool	ladyBugRemoved
]{
	Group {
		children [
			Switch {
				choice [		 
					DEF ApartmentInstance 
					Transform {
						children 
							ApartmentProto {
								lod	IS lod	   
							}
							rotation 0 1 0 +0.6
					}

					DEF Bed Transform {
						children [
							Inline {
								url	["../blend/bed.wrl"]
							}
						]
						scale 0.5 1 1
						translation	-0.7 0 0
					}					
					DEF StairInstance StairsProto {
						lod	IS lod		
					}							
		   
					DEF	LadyBugOnBed LadyBugProto {
						lod	IS lod 
					}

					DEF	LadyBugInstance Transform {
						children [	
							LadyBugProto {
								lod	IS lod
							}
						]
					}

					DEF	Shelf Transform {
						children Inline {
							url	["../blend/library.wrl"]
						}
						scale 1 1 2
					}
					DEF	GlassInstanceC2 Transform	{
						children GlassProto {
							lod	IS lod
							color 0 0 0.4
						}
						translation	0 0.1 0
						scale 0.07 0.07 0.07
					}
					DEF	GlassInstanceC1 Transform	{
						children GlassProto {
							lod	IS lod
							color 0.1 1 0.4
						}
						translation	0 0.1 0
						scale 0.07 0.07 0.07
					}
					DEF	GlassInstance Transform	{
						children GlassProto {
							lod	IS lod
						}
						translation	0 0.1 0
						scale 0.07 0.07 0.07
					}
				]
			}
			Transform {
					children [
						Transform {
							children	[
								USE	ApartmentInstance
							]
						}
					Transform {
						children [
							Transform {
								children [	 
									DEF TestContent Transform {
										children [
											USE	Bed	
											DEF ToRemoveWithLadyBug Transform {
												children [
													Transform {
														children [
															
															USE LadyBugOnBed
															
															DEF LadyBugRemoval Script {
															eventOut MFNode	child
															eventOut SFBool	ladyBugRemoved IS ladyBugRemoved
															eventIn	SFTime touched
															field MFNode node USE ToRemoveWithLadyBug
															url "javascript:
																	function touched(time)
																	{
																		child = node;
																		ladyBugRemoved = true;
																	}
																"
															}
															# for setting correct time for moving ladybug
															DEF	DefaultTimeSensor TimeSensor {
																enabled	TRUE
															}

															DEF LadyBugTouch ProximitySensor { size 0.5 0.5 0.5 }
															DEF LadyBugMove ProximitySensor { size 0.6 0.6 0.6 }
															DEF	LadyBugTimeSensor1 TimeSensor {
																enabled	FALSE
																cycleInterval 2
															}
															DEF	LadyBugTimeSensor2 TimeSensor {
																enabled	FALSE
																cycleInterval 2
															}

										    				DEF	TouchLadyBugOnBed TouchSensor {
																enabled	FALSE
															}
															DEF	LadyBugMove1 PositionInterpolator {
																key	[0,1]
																keyValue [ 0 0 0.3, 0 1 1 ]
															}

															DEF	LadyBugMove2 PositionInterpolator {
																key	[0,1]
																keyValue [ 0 1 1, 0 0 0.3 ]
															}
														] 
														scale 3 3 3		  
													}							  
													Transform {
														children Arrow3DBlinker	{
															arrowVisible IS	arrow_visible
														}	
														translation 0 0.5 0		  
													}
												]
											translation 0 0.3 0						   
											}
											DEF	LadyBugOnBedProximity ProximitySensor	{
												size 3 3 3
											}
											
										]
									
								}
											
							]
							scale 3 1 3
							translation	-2.5 0 0.3
							rotation 0 1 0 1.8
							} 
						]
					}
					Transform {
						children [
							USE Shelf 
							Transform {
								children [ 
									USE Shelf
									Transform {
										children  [ USE GlassInstanceC1
											Transform {
												children [ USE GlassInstance 
													Transform {
														children USE GlassInstanceC2
														translation	0.1 0.12 0.3
														rotation 0 1 1 2.17
													}
												]
												translation	0.1 0 0.25
											}
										] 
										translation	1 0 0
									}
								]
								translation	0 0.5 0
							}					
						]
						translation	0 1.5 -3.5
						rotation 0 1 0 1.6		
					}	  
					Transform {
						children [
							Transform {
								children [
									Viewpoint {
										description	"Apartment"
										orientation	1 0 0 -.3
										position 4 0.7 0
										jump FALSE
										fieldOfView	1.05
									}
									Viewpoint {
										description	"Inside Apartment"
										orientation	0 0 1 0
										position -0.2 -2.2 1.2
										jump FALSE
										fieldOfView	1.05
									}
								]
								rotation 0 1 0 -0.60
							}
						]
						# Translastion of the balcony platform
						translation	0 2.9 0
					}

				]
				#all is moved  "down" so that the ceiling is at "0"
				translation	0 -2.9 0
			}
		]
	}
	DEF LadyBugMoveScript Script {
		eventIn	SFTime curTime
		eventIn	SFBool moveLadyBug
		eventIn	SFBool isActive1
		eventIn	SFBool isActive2
		
		eventOut SFTime time1
		eventOut SFTime time2
		url "javascript:
		        			  
				var firstMove = true;
				function moveLadyBug(time)
				{		
					if ( isActive1 || isActive2 )
						return;
					if ( firstMove )
						time1 = curTime;
					else
						time2 = curTime; 
					firstMove = !firstMove;
				}
			"  
	}
	
	ROUTE DefaultTimeSensor.time TO	LadyBugMoveScript.curTime

	#ROUTE LadyBugTimeSensor1.isActive TO LadyBugMoveScript.isActive1
	#ROUTE LadyBugTimeSensor1.fraction_changed TO LadyBugMove1.set_fraction
	#ROUTE LadyBugMove1.value_changed TO	ToRemoveWithLadyBug.translation
	#ROUTE LadyBugMoveScript.time1 TO LadyBugTimeSensor1.startTime

	#move back
	#ROUTE LadyBugTimeSensor2.isActive TO LadyBugMoveScript.isActive2
	#ROUTE LadyBugMoveScript.time2 TO LadyBugTimeSensor2.startTime 
	#ROUTE LadyBugTimeSensor2.fraction_changed TO LadyBugMove2.set_fraction
	#ROUTE LadyBugMove1.value_changed TO	ToRemoveWithLadyBug.translation

	ROUTE LadyBugTouch.isActive TO TouchLadyBugOnBed.enabled
	ROUTE TouchLadyBugOnBed.touchTime TO LadyBugRemoval.touched
	ROUTE LadyBugMove.isActive TO	  LadyBugMoveScript.moveLadyBug
	
	ROUTE LadyBugRemoval.child TO TestContent.removeChildren
}

BedRoom	{}
