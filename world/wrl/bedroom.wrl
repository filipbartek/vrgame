Transform {
		children [
			Transform {
				children	[
					Inline {
						url	["../blend/apartment.wrl"]
					}
				]
			}
		Transform {
			children [
				USE	Bed
			]
			translation	0 0 0.3
		}
		Transform {
			children [
				USE LadyBug
			]
			translation	0 0.58 0
		}
		Transform {
			children [
				USE	Bed
			]
			translation	0 0 -0.3
		}
		Transform {
			children [
				USE Shelf
				Transform {
					children	USE	LadyBug
					translation 1.0 0.5 -1.0
				}
			]
			translation	0 2 0
			rotation 0 1 0 1.6
		}
		Transform {
			children [ 
				USE Shelf
				Transform {
					children  [ USE Glass
						Transform {
							children [ USE Glass 
								Transform {
									children USE Glass
									translation	0.1 0.12 0.3
									rotation 0 1 1 2.17
								}
							]
							translation	0.1 0 0.25
						}
					] 
					translation	1 0 0
				}
			]
			translation	0 1.5 0
			rotation 0 1 0 1.6
		}
		USE	Stair
		Transform {
			children [
				Inline {
					url	["../blend/balconyPlatform.wrl"]
				}

