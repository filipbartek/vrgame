#VRML V2.0 utf8

WorldInfo {
	title "Bedroom"
	info ["Eva Pešková", "Filip Bártek"]
}

EXTERNPROTO	LadyBugProto [
	exposedField SFInt32 lod
]
"ladyBugLods.wrl#LadyBug"

EXTERNPROTO	GlassProto [
	exposedField SFInt32 lod
	exposedField SFColor color
]
"glassLods.wrl#Cups"

EXTERNPROTO	StairsProto [
	exposedField SFInt32 lod  
	exposedField SFNode	texture
]
"../blend/stair.wrl#Stairs"

EXTERNPROTO ApartmentProto [
	exposedField SFInt32 lod 
	exposedField SFNode windowTexture
	exposedField SFInt32 zCeilingRotation
]
"apartment.wrl#Apartment"

PROTO BedRoom [
	exposedField SFInt32 lod 1
]{
	Group {
		children [
			Switch {
				choice [
					DEF ApartmentInstance ApartmentProto {
						lod	IS lod		
					}

					DEF Bed Transform {
						children [
							Inline {
								url	["../blend/bed.wrl"]
							}
						]
						translation	-0.7 0 0
					}					
					DEF StairInstance StairsProto {
						lod	IS lod		
					}							
		   
					DEF	LadyBugInstance Transform {
						children [
							LadyBugProto {
								lod	IS lod
							}
						]
					}

					DEF	Shelf Transform {
						children Inline {
							url	["../blend/library.wrl"]
						}
					}
					DEF	GlassInstanceC2 Transform	{
						children GlassProto {
							lod	IS lod
							color 0 0 0.4
						}
						translation	0 0.1 0
						scale 0.07 0.07 0.07
					}
					DEF	GlassInstanceC1 Transform	{
						children GlassProto {
							lod	IS lod
							color 0.1 1 0.4
						}
						translation	0 0.1 0
						scale 0.07 0.07 0.07
					}
					DEF	GlassInstance Transform	{
						children GlassProto {
							lod	IS lod
						}
						translation	0 0.1 0
						scale 0.07 0.07 0.07
					}
				]
			}
			Transform {
					children [
						Transform {
							children	[
								USE	ApartmentInstance
							]
						}
					Transform {
						children [
							USE	Bed
						]
						translation	0 0 0.3
					}
					Transform {
						children [
							USE LadyBugInstance
						]
						translation	0 0.58 0
					}
					Transform {
						children [
							USE	Bed
						]
						translation	0 0 -0.3
					}
					Transform {
						children [
							USE Shelf
							Transform {
								children	USE	LadyBugInstance
								translation 1.0 0.5 -1.0
							}
						]
						translation	0 2 0
						rotation 0 1 0 1.6
					}
					Transform {
						children [ 
							USE Shelf
							Transform {
								children  [ USE GlassInstanceC1
									Transform {
										children [ USE GlassInstance 
											Transform {
												children USE GlassInstanceC2
												translation	0.1 0.12 0.3
												rotation 0 1 1 2.17
											}
										]
										translation	0.1 0 0.25
									}
								] 
								translation	1 0 0
							}
						]
						translation	0 1.5 0
						rotation 0 1 0 1.6
					}
					USE	StairInstance
					Transform {
						children [
							Inline {
								url	["../blend/balconyPlatform.wrl"]
							}

							Inline {
								url	["../blend/PlatformWithHole.wrl"]
							}

							Transform {
								children [
									Viewpoint {
										description	"Apartment"
										orientation	1 0 0 -1.18
										position 1.2 0.5 0
										jump FALSE
									}
									Viewpoint {
										description	"Inside Apartment"
										orientation	0 0 1 0
										position -0.2 -2.2 1.2
										jump FALSE
									}
								]
								rotation 0 1 0 -0.60
							}
						]
						# Translastion of the balcony platform
						translation	0 2.9 0
					}

				]
				#all is moved  "down" so that the ceiling is at "0"
				translation	0 -2.9 0
			}
		]
	}
}
