}

Switch {
	choice [
		DEF Bed Transform {
			children [
				Inline {
					url	["../blend/bed.wrl"]
				}
			]
			translation	-0.7 0 0
		}
			
		DEF Stair Inline {
			url	["../blend/stair.wrl"]
		}
		DEF	LadyBug Transform {
			children [
				Inline {
					url	["../blend/ladybug.wrl"]
				}
			]
			scale 0.01 0.01 0.01 
		}
		DEF	Shelf Transform {
			children Inline {
				url	["../blend/library.wrl"]
			}
		}
		DEF	Glass Transform	{
			children Inline {
				url	["../blend/glass.wrl"]
			}
