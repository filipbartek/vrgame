#VRML V2.0 utf8

# Based on Bell Rock Lighthouse
# http://www.bellrock.org.uk/

WorldInfo {
	title "Lighthouse"
	info ["Filip Bártek", "Eva Pešková"]
}

EXTERNPROTO	Body [
	exposedField SFInt32 lod
	exposedField SFColor diffuseColor
]
"lighthouse-body.wrl#LighthouseBody"

EXTERNPROTO	BalconyProto [
	exposedField SFInt32 lod
]
"balcony.wrl#Balcony"

EXTERNPROTO	BedRoomProto [
	exposedField SFInt32 lod
]
"bedroom.wrl#BedRoom"

PROTO Lighthouse [

	# 1: LOD enabled
	# 0: LOD disabled
	exposedField SFInt32 lod 1

]{
	Group {
		children [

			Body {
				lod IS lod
			}

			Transform {
				children [
					BalconyProto {
						lod	IS lod
					}
					Transform {
						children [
							BedRoomProto {
								lod	IS  lod
							}
						]
						scale 0.33 1 0.33
					}
					
				]
				# Lighthouse height
				translation	0 29.7942 0
			}

		]
	}
}
