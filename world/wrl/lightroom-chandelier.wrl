#VRML V2.0 utf8

WorldInfo {
	title "Chandelier"
	info ["Filip BÃ¡rtek"]
}

PROTO LightCone [
	exposedField SFColor color 1 1 0
	exposedField SFFloat transparency 0.7
	exposedField SFVec3f scale 100 100 100
	exposedField SFBool lightOn FALSE
	exposedField SFBool pointLightOn TRUE
]{
	Transform {
		children [
			Transform	{
				children [
					Transform	{
						children [
							Transform {
								children [
									Shape {
										appearance Appearance {
											material Material {
												transparency IS	transparency
												emissiveColor IS color
											}
										}
										geometry Cone {
											bottom FALSE
										}
									}
								]
								translation	0 -1 0
							}
						]
						# 270 degrees
						rotation 1 0 0 4.71
					}
				]
				scale 0.21 0.21 1
			}
			SpotLight {
				color IS color
				beamWidth 0.39 # 22.5 degrees
				cutOffAngle	0.39 # 22.5 degrees
				ambientIntensity 0
				on IS lightOn
			}
			PointLight {
				color IS color
				location 0 0 1
				radius 1
				ambientIntensity 0
				attenuation	0 0.1 0
				intensity 1
				on IS pointLightOn
			}
		]
		scale IS scale
	}
}

Switch {
	choice [

		DEF	Reflector Inline {
			url	["reflector.wrl"]
		}

		DEF	Line2 Group {
			children [
				Transform {
					children [
						USE	Reflector
					]
					translation	-0.3175 0 0
				}
				Transform {
					children [
						USE	Reflector
					]
					translation	0.3175 0 0
				}
			]
		}

		DEF	Line3 Group {
