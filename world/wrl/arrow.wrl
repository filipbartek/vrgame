#VRML V2.0 utf8

WorldInfo {
	title "3D arrow"
	info ["Eva Pešková"]
}

PROTO Arrow3D [
	eventIn	SFBool showIt
	exposedField SFColor dColor 0 0 0
]{
	Group {
		children [
			Switch {
				choice [
					DEF	ArrowShapeHead Shape {
						 appearance	Appearance {
							 material Material {
								 diffuseColor IS dColor
							 }
						 }
						 geometry Cone {
							 height	1
							 bottomRadius 0.5
							 bottom	FALSE
							 side TRUE
						 }
					}
					DEF	ArrowShapeBody Shape {
						appearance Appearance {
							material Material {
								diffuseColor IS	dColor
							}
						}
						geometry Cylinder {
							height 2
							radius 0.2
							bottom FALSE
							side TRUE
						}
					}
				]
			}
			Transform {
				children [
					USE	ArrowShapeBody
					Transform {
						children [
							USE	ArrowShapeHead
						]
						translation	0 1.2 0
					}
				]
				rotation	0 0 1 3.1			
			}
		]
	}
}