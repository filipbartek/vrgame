#VRML V2.0 utf8

WorldInfo {
	title "Bar with square cross section"
	info ["Filip BÃ¡rtek"]
}

PROTO BarSquare [
	exposedField SFInt32 lod 1
	field SFVec3f size 0.5 1 0.5
	exposedField SFColor diffuseColor 0.5 0.1 0
]{
	Group {
		children [
			Switch {
				choice [
					DEF	Box Shape {
						appearance DEF Appearance Appearance {
							material Material {
								diffuseColor IS	diffuseColor
							}
						}
						geometry Box {
							size IS	size
						}
					}
					DEF	Billboard Billboard	{
						axisOfRotation 0 1 0
						children Transform	{
							children Transform {
								children Transform {
									children Shape	{
										appearance USE Appearance
										geometry ElevationGrid {
											xDimension 2
											zDimension 2
											height [0 0, 0 0]
											solid FALSE
										}
									}
									translation	-0.5 0 -0.5
								}
								rotation 1 0 0 1.57
							}
							scale IS size
						}
					}
				]
			}
			Switch {
				whichChoice	IS lod
				choice [
					USE	Box
					LOD	{
						range [50 150]
						level [
							USE	Box
							USE	Billboard
							Group {}
						]
					}
				]
			}
		]
	}
}
