#VRML V2.0 utf8

# http://www.bellrock.org.uk/lighthouse/lighthouse_lightroom.htm

Switch {
	choice [
		DEF	Chandelier Inline {
			url	["lightroom-chandelier.wrl"]
		}
		DEF	Cage Inline	{
			url	["lightroom-cage.wrl"]
		}
		DEF	Masonry Inline {
			url	["lightroom-masonry.wrl"]
		}
		DEF	Roof Inline	{
			url	["lightroom-roof.wrl"]
		}
		DEF	Clock Inline {
			url	["clock.wrl"]
		}
		DEF	Winding Inline {
			url	["winding.wrl"]
		}
	]
}

USE	Masonry

Transform {
	children [
		USE	Clock
	]
	rotation 0 1 0 -0.79
	translation	-1.1854 1.6 1.1854
}

Transform {
	children [
		USE	Winding
	]
	translation	0.2 1.6 0
}

Transform {
	children [
		USE	Cage
		Transform {
			children [
				USE	Chandelier
			]
			# Cage height / 2
			translation	0 2.037 0
		}
		Transform {
			children [
				USE	Roof
			]
			# Cage height
			translation	0 4.5849 0
		}
	]
	# Masonry height
	translation	0 1.80975 0
}
