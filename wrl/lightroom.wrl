#VRML V2.0 utf8

# http://www.bellrock.org.uk/lighthouse/lighthouse_lightroom.htm

Switch {
	choice [
		DEF	Chandelier Inline {
			url	["chandelier.wrl"]
		}
		DEF	Cage Inline	{
			url	["lightroom-cage.wrl"]
		}
		DEF	Masonry Inline {
			url	["lightroom-masonry.wrl"]
		}
		DEF	Roof Inline	{
			url	["lightroom-roof.wrl"]
		}
	]
}

USE	Masonry

Transform {
	children [
		USE	Cage
		Transform {
			children [
				USE	Chandelier
			]
			# Cage height / 2
			translation	0 2.037 0
		}
		Transform {
			children [
				USE	Roof
			]
			# Cage height
			translation	0 4.0767 0
		}
		Inline	{
			url	["barrier.wrl"]
		}
	]
	# Masonry height
	translation	0 1.80975 0
}
