EXTERNPROTO TruncatedConeShape [
	field SFNode appearance
	exposedField SFInt32 lod
	field MFFloat range
	field SFFloat height
	field SFFloat bottomRadius
	field SFFloat topRadius
	field SFBool bottom
	field SFBool top
	field SFBool solid
	field SFFloat creaseAngle
	field SFInt32 complexity
]
"truncatedconeshape.wrl#TruncatedConeShape"

PROTO ConeShape [

	field SFNode appearance NULL # Mandatory!

	# 1: LOD enabled
	# 0: LOD disabled
	exposedField SFInt32 lod 1

	# LOD ranges
	field MFFloat range [50 200]

	# Cone:
	field SFFloat radius 1 # As in Cylinder
	field SFFloat height 2
	# No `side` param
	field SFBool bottom TRUE

	# Extrusion:
	field SFBool solid TRUE
	field SFFloat creaseAngle 1.57

	field SFInt32 complexity 24

]{
	TruncatedConeShape {
		appearance IS appearance
		lod	IS lod
		range IS range
		height IS height
		bottomRadius IS	radius
		topRadius 0
		bottom IS bottom
		top	FALSE
		solid IS solid
		creaseAngle	IS creaseAngle
		complexity IS complexity
	}
}
