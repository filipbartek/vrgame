#VRML V2.0 utf8

# A reflector that is pointing in the positive direction of X axis.

Transform {
	children [
		Shape {
			appearance Appearance {
				material Material {
					diffuseColor 0.8 0.8 0.8
				}
			}
			geometry Cone {
				# http://www.bellrock.org.uk/lighthouse/lighthouse_lightroom.htm
				# parabolic shape of 25 inches in diameter
				bottomRadius 0.3175
				height 0.3175
			}
		}
	]
	rotation 0 0 1 1.57
}
